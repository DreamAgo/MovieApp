<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#302b25"
    android:orientation="vertical"
    tools:context="com.work17.huise.movieapp.DeTailActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/include"
            layout="@layout/detail_topbar"></include>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:id="@+id/img_big"
                android:layout_width="180dp"
                android:layout_height="264dp"
                android:src="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="#cccccc" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginTop="2dp"
                android:background="#cccccc" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/movie_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电影名：追龙"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/director_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:text="导演：王晶/关智"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/movie_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="年份：2017"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/actor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="主演：甑子丹/刘德华/姜皓文/郑则仕"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="99dp" />

                <ImageView
                    android:id="@+id/img_2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="99dp"
                    android:layout_marginLeft="10dp" />

                <ImageView
                    android:id="@+id/img_3"
                    android:layout_width="0dp"
                    android:layout_height="99dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp" />

                <ImageView
                    android:id="@+id/img_4"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="99dp"
                    android:layout_marginLeft="10dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="#cccccc" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_marginTop="2dp"
                    android:background="#cccccc" />
            </LinearLayout>

            <TextView
                android:id="@+id/remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>
