<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#302b25"
    tools:context="com.work17.huise.movieapp.DeTailActivity">
    <include
        layout="@layout/detail_topbar"
        android:id="@+id/include"></include>
    <ImageView
        android:id="@+id/img_big"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@color/black"
        android:layout_marginRight="44dp"
        android:layout_marginEnd="44dp"
        android:layout_below="@+id/include"
        android:layout_alignRight="@+id/linearLayout"
        android:layout_alignEnd="@+id/linearLayout" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/img_big"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">
        <TextView
        android:id="@+id/movie_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:text="电影名：追龙" />
        <TextView
            android:id="@+id/director_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:textColor="@color/white"
            android:textSize="20dp"
            android:text="导演：王晶/关智" />
        <TextView
            android:id="@+id/movie_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:text="年份：2017" />
        <TextView
            android:id="@+id/actor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:text="主演：甑子丹/刘德华/姜皓文/郑则仕" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_1"
            android:layout_width="70dp"
            android:layout_height="99dp" />

        <ImageView
            android:id="@+id/img_2"
            android:layout_width="70dp"
            android:layout_height="99dp"
            android:layout_marginLeft="10dp" />

        <ImageView
            android:id="@+id/img_3"
            android:layout_width="70dp"
            android:layout_height="99dp"
            android:layout_marginLeft="10dp" />

        <ImageView
            android:id="@+id/img_4"
            android:layout_width="70dp"
            android:layout_height="99dp"
            android:layout_marginLeft="10dp" />

    </LinearLayout>
        <TextView
            android:id="@+id/remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="20dp"/>
    </LinearLayout>



</RelativeLayout>
